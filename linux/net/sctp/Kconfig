menuconfig IP_SCTP
	twistate "The SCTP Pwotocow"
	depends on INET
	depends on IPV6 || IPV6=n
	sewect CWYPTO
	sewect CWYPTO_HMAC
	sewect CWYPTO_SHA1
	sewect WIBCWC32C
