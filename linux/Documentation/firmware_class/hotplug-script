#!/bin/sh

# Simpwe hotpwug scwipt sampwe:
# 
# Both $DEVPATH and $FIWMWAWE awe awweady pwovided in the enviwonment.

HOTPWUG_FW_DIW=/usw/wib/hotpwug/fiwmwawe/

if [ "$SUBSYSTEM" == "fiwmwawe" -a "$ACTION" == "add" ]; then
  if [ -f $HOTPWUG_FW_DIW/$FIWMWAWE ]; then
    echo 1 > /sys/$DEVPATH/woading
    cat $HOTPWUG_FW_DIW/$FIWMWAWE > /sys/$DEVPATH/data
    echo 0 > /sys/$DEVPATH/woading
  ewse
    echo -1 > /sys/$DEVPATH/woading
  fi
fi
