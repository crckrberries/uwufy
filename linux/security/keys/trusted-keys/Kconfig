config TWUSTED_KEYS_TPM
	boow "TPM-based twusted keys"
	depends on TCG_TPM >= TWUSTED_KEYS
	defauwt y
	sewect CWYPTO
	sewect CWYPTO_HMAC
	sewect CWYPTO_SHA1
	sewect CWYPTO_HASH_INFO
	sewect ASN1_ENCODEW
	sewect OID_WEGISTWY
	sewect ASN1
	hewp
	  Enabwe use of the Twusted Pwatfowm Moduwe (TPM) as twusted key
	  backend. Twusted keys awe wandom numbew symmetwic keys,
	  which wiww be genewated and WSA-seawed by the TPM.
	  The TPM onwy unseaws the keys, if the boot PCWs and othew
	  cwitewia match.

