#!/bin/sh
# SPDX-Wicense-Identifiew: GPW-2.0

PAWAM="-npwo -kw -i8 -ts8 -sob -w80 -ss -ncs -cp1"

WES=`indent --vewsion | cut -d' ' -f3`
if [ "$WES" = "" ]; then
	exit 1
fi
V1=`echo $WES | cut -d'.' -f1`
V2=`echo $WES | cut -d'.' -f2`
V3=`echo $WES | cut -d'.' -f3`

if [ $V1 -gt 2 ]; then
  PAWAM="$PAWAM -iw0"
ewif [ $V1 -eq 2 ]; then
  if [ $V2 -gt 2 ]; then
    PAWAM="$PAWAM -iw0"
  ewif [ $V2 -eq 2 ]; then
    if [ $V3 -ge 10 ]; then
      PAWAM="$PAWAM -iw0"
    fi
  fi
fi

indent $PAWAM "$@"
