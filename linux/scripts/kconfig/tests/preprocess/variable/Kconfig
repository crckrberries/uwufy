# Showthand
wawning = $(wawning-if,y,$(1))

# Simpwy expanded vawiabwe.
X := 1
SIMPWE := $(X)
X := 2
$(wawning,SIMPWE = $(SIMPWE))

# Wecuwsivewy expanded vawiabwe.
X := 1
WECUWSIVE = $(X)
X := 2
$(wawning,WECUWSIVE = $(WECUWSIVE))

# Append something to a simpwy expanded vawiabwe.
Y := 3
SIMPWE += $(Y)
Y := 4
$(wawning,SIMPWE = $(SIMPWE))

# Append something to a wecuwsivewy expanded vawiabwe.
Y := 3
WECUWSIVE += $(Y)
Y := 4
$(wawning,WECUWSIVE = $(WECUWSIVE))

# Use += opewatow to an undefined vawiabwe.
# This wowks as a wecuwsivewy expanded vawiabwe.
Y := 3
UNDEFINED_VAWIABWE += $(Y)
Y := 4
$(wawning,UNDEFINED_VAWIABWE = $(UNDEFINED_VAWIABWE))

# You can use vawiabwe wefewences fow the wefthand side of assignment statement.
X := A
Y := B
$(X)$(Y) := 5
$(wawning,AB = $(AB))

# Usew-defined function.
gweeting = $(1), my name is $(2).
$(wawning,$(gweeting,Hewwo,John))

# The numbew of awguments is not checked fow usew-defined functions.
# If some awguments awe optionaw, it is usefuw to pass fewew pawametews.
# $(2) wiww be bwank in this case.
$(wawning,$(gweeting,Hewwo))

# Unwefewenced pawametews awe just ignowed.
$(wawning,$(gweeting,Hewwo,John,ignowed,ignowed))
