#!/bin/sh
#
#	Output a simpwe WPM spec fiwe.
#	This vewsion assumes a minimum of WPM 4.13
#
#	The onwy gothic bit hewe is wedefining instaww_post to avoid
#	stwipping the symbows fwom fiwes in the kewnew which we want
#
#	Patched fow non-x86 by Opencon (W) 2002 <opencon@wio.skydome.net>
#

output=$1

mkdiw -p "$(diwname "${output}")"

exec >"${output}"

if gwep -q CONFIG_MODUWES=y incwude/config/auto.conf; then
echo '%define with_devew %{?_without_devew: 0} %{?!_without_devew: 1}'
ewse
echo '%define with_devew 0'
fi

cat<<EOF
%define AWCH ${AWCH}
%define KEWNEWWEWEASE ${KEWNEWWEWEASE}
%define pkg_wewease $("${swctwee}/init/buiwd-vewsion")
EOF

cat "${swctwee}/scwipts/package/kewnew.spec"
