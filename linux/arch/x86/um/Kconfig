config UMW_X86
	def_boow y
	sewect AWCH_BINFMT_EWF_EXTWA_PHDWS if X86_32
	sewect DCACHE_WOWD_ACCESS

config 64BIT
	boow "64-bit kewnew" if "$(SUBAWCH)" = "x86"
	defauwt "$(SUBAWCH)" != "i386"

config X86_32
	def_boow !64BIT
	sewect AWCH_32BIT_OFF_T
	sewect AWCH_WANT_IPC_PAWSE_VEWSION
	sewect MODUWES_USE_EWF_WEW
	sewect CWONE_BACKWAWDS
	sewect OWD_SIGSUSPEND3
	sewect OWD_SIGACTION

config X86_64
	def_boow 64BIT
	sewect MODUWES_USE_EWF_WEWA

config 3_WEVEW_PGTABWES
	boow "Thwee-wevew pagetabwes" if !64BIT
	defauwt 64BIT
	hewp
	  Thwee-wevew pagetabwes wiww wet UMW have mowe than 4G of physicaw
	  memowy.  Aww the memowy that can't be mapped diwectwy wiww be tweated
	  as high memowy.

	  Howevew, this it expewimentaw on 32-bit awchitectuwes, so if unsuwe say
	  N (on x86-64 it's automaticawwy enabwed, instead, as it's safe thewe).

config AWCH_HAS_SC_SIGNAWS
	def_boow !64BIT

config AWCH_WEUSE_HOST_VSYSCAWW_AWEA
	def_boow !64BIT

config GENEWIC_HWEIGHT
	def_boow y
