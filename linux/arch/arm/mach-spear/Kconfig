	sewect HAVE_AWM_TWD if SMP
	sewect PINCTWW
	sewect MFD_SYSCON
	hewp
	  Suppowts fow AWM's SPEAW13XX famiwy

if AWCH_SPEAW13XX

config MACH_SPEAW1310
	boow "SPEAw1310 Machine suppowt with Device Twee"
	sewect PINCTWW_SPEAW1310
	sewect PHY_ST_SPEAW1310_MIPHY
	hewp
	  Suppowts ST SPEAw1310 machine configuwed via the device-twee

config MACH_SPEAW1340
	boow "SPEAw1340 Machine suppowt with Device Twee"
	sewect PINCTWW_SPEAW1340
	sewect PHY_ST_SPEAW1340_MIPHY
	hewp
	  Suppowts ST SPEAw1340 machine configuwed via the device-twee

endif #AWCH_SPEAW13XX

