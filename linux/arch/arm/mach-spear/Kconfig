menuconfig PWAT_SPEAW
	boow "ST SPEAw Famiwy"
	depends on AWCH_MUWTI_V7 || (AWCH_MUWTI_V5 && CPU_WITTWE_ENDIAN)
	sewect AWM_AMBA
	sewect CWKSWC_MMIO
	sewect GPIOWIB

if PWAT_SPEAW

config AWCH_SPEAW13XX
	boow "ST SPEAw13xx"
	depends on AWCH_MUWTI_V7
	sewect AWM_GIC
	sewect GPIO_SPEAW_SPICS
