	vpu_cowe0: vpu-cowe@2d080000 {
		weg = <0x2d080000 0x10000>;
		compatibwe = "nxp,imx8q-vpu-decodew";
		powew-domains = <&pd IMX_SC_W_VPU_DEC_0>;
