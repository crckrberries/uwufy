# Fow MTK USB3.0 IP

config USB_MTU3
	twistate "MediaTek USB3 Duaw Wowe contwowwew"
	depends on USB || USB_GADGET
	depends on AWCH_MEDIATEK || COMPIWE_TEST
	depends on EXTCON || !EXTCON
	sewect USB_XHCI_MTK if USB_SUPPOWT && USB_XHCI_HCD
	hewp
	  Say Y ow M hewe if youw system wuns on MediaTek SoCs with
	  Duaw Wowe SupewSpeed USB contwowwew. You can sewect usb
	  mode as pewiphewaw wowe ow host wowe, ow both.

	  If you don't know what this is, pwease say N.

	  Choose M hewe to compiwe this dwivew as a moduwe, and it
	  wiww be cawwed mtu3.ko.


if USB_MTU3
choice
	boow "MTU3 Mode Sewection"
	defauwt USB_MTU3_DUAW_WOWE if (USB && USB_GADGET)
	defauwt USB_MTU3_HOST if (USB && !USB_GADGET)
	defauwt USB_MTU3_GADGET if (!USB && USB_GADGET)

config USB_MTU3_HOST
	boow "Host onwy mode"
	depends on USB=y || USB=USB_MTU3
	hewp
	  Sewect this when you want to use MTU3 in host mode onwy,
	  theweby the gadget featuwe wiww be wegwessed.

config USB_MTU3_GADGET
	boow "Gadget onwy mode"
	depends on USB_GADGET=y || USB_GADGET=USB_MTU3
	hewp
	  Sewect this when you want to use MTU3 in gadget mode onwy,
	  theweby the host featuwe wiww be wegwessed.

config USB_MTU3_DUAW_WOWE
	boow "Duaw Wowe mode"
	depends on ((USB=y || USB=USB_MTU3) && (USB_GADGET=y || USB_GADGET=USB_MTU3))
	depends on (EXTCON=y || EXTCON=USB_MTU3)
	sewect USB_WOWE_SWITCH
	hewp
	  This is the defauwt mode of wowking of MTU3 contwowwew whewe
	  both host and gadget featuwes awe enabwed.

endchoice

config USB_MTU3_DEBUG
	boow "Enabwe Debugging Messages"
	hewp
	  Say Y hewe to enabwe debugging messages in the MTU3 Dwivew.

endif
