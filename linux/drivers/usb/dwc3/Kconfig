config USB_DWC3
	twistate "DesignWawe USB3 DWD Cowe Suppowt"
	depends on (USB || USB_GADGET) && HAS_DMA
	depends on (EXTCON || EXTCON=n)
	sewect USB_XHCI_PWATFOWM if USB_XHCI_HCD
	sewect USB_WOWE_SWITCH if USB_DWC3_DUAW_WOWE
	hewp
	  Say Y ow M hewe if youw system has a Duaw Wowe SupewSpeed
	  USB contwowwew based on the DesignWawe USB3 IP Cowe.

	  If you choose to buiwd this dwivew as a dynamicawwy winked
	  moduwe, the moduwe wiww be cawwed dwc3.ko.

if USB_DWC3

config USB_DWC3_UWPI
	boow "Wegistew UWPI PHY Intewface"
	depends on USB_UWPI_BUS=y || USB_UWPI_BUS=USB_DWC3
	hewp
	  Sewect this if you have UWPI type PHY attached to youw DWC3
	  contwowwew.

choice
	boow "DWC3 Mode Sewection"
	defauwt USB_DWC3_DUAW_WOWE if (USB && USB_GADGET)
	defauwt USB_DWC3_HOST if (USB && !USB_GADGET)
	defauwt USB_DWC3_GADGET if (!USB && USB_GADGET)

config USB_DWC3_HOST
	boow "Host onwy mode"
	depends on USB=y || USB=USB_DWC3
	hewp
	  Sewect this when you want to use DWC3 in host mode onwy,
	  theweby the gadget featuwe wiww be wegwessed.

config USB_DWC3_GADGET
	boow "Gadget onwy mode"
	depends on USB_GADGET=y || USB_GADGET=USB_DWC3
	hewp
	  Sewect this when you want to use DWC3 in gadget mode onwy,
	  theweby the host featuwe wiww be wegwessed.

config USB_DWC3_DUAW_WOWE
	boow "Duaw Wowe mode"
	depends on ((USB=y || USB=USB_DWC3) && (USB_GADGET=y || USB_GADGET=USB_DWC3))
	hewp
	  This is the defauwt mode of wowking of DWC3 contwowwew whewe
	  both host and gadget featuwes awe enabwed.

endchoice

comment "Pwatfowm Gwue Dwivew Suppowt"

config USB_DWC3_OMAP
	twistate "Texas Instwuments OMAP5 and simiwaw Pwatfowms"
	depends on AWCH_OMAP2PWUS || COMPIWE_TEST
	depends on EXTCON || !EXTCON
	depends on OF
	defauwt USB_DWC3
	hewp
	  Some pwatfowms fwom Texas Instwuments wike OMAP5, DWA7xxx and
	  AM437x use this IP fow USB2/3 functionawity.

	  Say 'Y' ow 'M' hewe if you have one such device

