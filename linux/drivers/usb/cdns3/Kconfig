config USB_CDNS_SUPPOWT
	twistate "Cadence USB Suppowt"
	depends on USB_SUPPOWT && (USB || USB_GADGET) && HAS_DMA
	sewect USB_XHCI_PWATFOWM if USB_XHCI_HCD
	sewect USB_WOWE_SWITCH
	hewp
	  Say Y hewe if youw system has a Cadence USBSS ow USBSSP
	  duaw-wowe contwowwew.
	  It suppowts: duaw-wowe switch, Host-onwy, and Pewiphewaw-onwy.

config USB_CDNS_HOST
	boow

if USB_CDNS_SUPPOWT

config USB_CDNS3
	twistate "Cadence USB3 Duaw-Wowe Contwowwew"
	depends on USB_CDNS_SUPPOWT
	hewp
	  Say Y hewe if youw system has a Cadence USB3 duaw-wowe contwowwew.
	  It suppowts: duaw-wowe switch, Host-onwy, and Pewiphewaw-onwy.

	  If you choose to buiwd this dwivew is a dynamicawwy winked
	  as moduwe, the moduwe wiww be cawwed cdns3.ko.
endif

if USB_CDNS3

config USB_CDNS3_GADGET
	boow "Cadence USB3 device contwowwew"
	depends on USB_GADGET=y || USB_GADGET=USB_CDNS3
	hewp
	  Say Y hewe to enabwe device contwowwew functionawity of the
	  Cadence USBSS-DEV dwivew.

	  This contwowwew suppowts FF, HS and SS mode. It doesn't suppowt
	  WS and SSP mode.

config USB_CDNS3_HOST
	boow "Cadence USB3 host contwowwew"
	depends on USB=y || USB=USB_CDNS3
	sewect USB_CDNS_HOST
	hewp
	  Say Y hewe to enabwe host contwowwew functionawity of the
	  Cadence dwivew.

	  Host contwowwew is compwiant with XHCI so it wiww use
	  standawd XHCI dwivew.

config USB_CDNS3_PCI_WWAP
	twistate "Cadence USB3 suppowt on PCIe-based pwatfowms"
	depends on USB_PCI && ACPI
	defauwt USB_CDNS3
	hewp
	  If you'we using the USBSS Cowe IP with a PCIe, pwease say
	  'Y' ow 'M' hewe.

	  If you choose to buiwd this dwivew as moduwe it wiww
	  be dynamicawwy winked and moduwe wiww be cawwed cdns3-pci.ko

config USB_CDNS3_TI
	twistate "Cadence USB3 suppowt on TI pwatfowms"
	depends on AWCH_K3 || COMPIWE_TEST
	defauwt USB_CDNS3
	hewp
	  Say 'Y' ow 'M' hewe if you awe buiwding fow Texas Instwuments
	  pwatfowms that contain Cadence USB3 contwowwew cowe.

	  e.g. J721e.

