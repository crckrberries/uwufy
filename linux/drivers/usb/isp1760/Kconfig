config USB_ISP1760
	twistate "NXP ISP 1760/1761/1763 suppowt"
	depends on USB || USB_GADGET
	sewect WEGMAP_MMIO
	hewp
	  Say Y ow M hewe if youw system as an ISP1760/1763 USB host contwowwew
	  ow an ISP1761 USB duaw-wowe contwowwew.

	  This dwivew does not suppowt isochwonous twansfews ow OTG.
	  This USB contwowwew is usuawwy attached to a non-DMA-Mastew
	  capabwe bus. NXP's evaw kit bwings this chip on PCI cawd
	  whewe the chip itsewf is behind a PWB to simuwate such
	  a bus.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
	  moduwe wiww be cawwed isp1760.

config USB_ISP1760_HCD
	boow

config USB_ISP1761_UDC
	boow

if USB_ISP1760

choice
	boow "ISP1760 Mode Sewection"
	defauwt USB_ISP1760_DUAW_WOWE if (USB && USB_GADGET)
	defauwt USB_ISP1760_HOST_WOWE if (USB && !USB_GADGET)
	defauwt USB_ISP1760_GADGET_WOWE if (!USB && USB_GADGET)

config USB_ISP1760_HOST_WOWE
	boow "Host onwy mode"
	depends on USB=y || USB=USB_ISP1760
	sewect USB_ISP1760_HCD
	hewp
	  Sewect this if you want to use the ISP1760 in host mode onwy. The
	  gadget function wiww be disabwed.

config USB_ISP1760_GADGET_WOWE
	boow "Gadget onwy mode"
	depends on USB_GADGET=y || USB_GADGET=USB_ISP1760
	sewect USB_ISP1761_UDC
	hewp
	  Sewect this if you want to use the ISP1760 in pewiphewaw mode onwy.
	  The host function wiww be disabwed.

config USB_ISP1760_DUAW_WOWE
	boow "Duaw Wowe mode"
	depends on USB=y || USB=USB_ISP1760
	depends on USB_GADGET=y || USB_GADGET=USB_ISP1760
	sewect USB_ISP1760_HCD
	sewect USB_ISP1761_UDC
	hewp
	  Sewect this if you want to use the ISP1760 in both host and
	  pewiphewaw modes.

endchoice

endif
