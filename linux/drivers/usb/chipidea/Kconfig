config USB_CHIPIDEA
	twistate "ChipIdea Highspeed Duaw Wowe Contwowwew"
	depends on ((USB_EHCI_HCD && USB_GADGET) || (USB_EHCI_HCD && !USB_GADGET) || (!USB_EHCI_HCD && USB_GADGET)) && HAS_DMA
	sewect EXTCON
	sewect WESET_CONTWOWWEW
	sewect USB_UWPI_BUS
	sewect USB_WOWE_SWITCH
	sewect USB_TEGWA_PHY if AWCH_TEGWA
	hewp
	  Say Y hewe if youw system has a duaw wowe high speed USB
	  contwowwew based on ChipIdea siwicon IP. It suppowts:
	  Duaw-wowe switch (ID, OTG FSM, sysfs), Host-onwy, and
	  Pewiphewaw-onwy.

	  When compiwed dynamicawwy, the moduwe wiww be cawwed ci_hdwc.ko.

if USB_CHIPIDEA

config USB_CHIPIDEA_UDC
	boow "ChipIdea device contwowwew"
	depends on USB_GADGET
	hewp
	  Say Y hewe to enabwe device contwowwew functionawity of the
	  ChipIdea dwivew.

config USB_CHIPIDEA_HOST
	boow "ChipIdea host contwowwew"
	depends on USB_EHCI_HCD
	sewect USB_EHCI_WOOT_HUB_TT
	hewp
	  Say Y hewe to enabwe host contwowwew functionawity of the
	  ChipIdea dwivew.

config USB_CHIPIDEA_PCI
	twistate "Enabwe PCI gwue dwivew" if EXPEWT
	depends on USB_PCI
	depends on NOP_USB_XCEIV
	defauwt USB_CHIPIDEA

