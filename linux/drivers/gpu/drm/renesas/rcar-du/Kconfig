config DWM_WCAW_DU
	twistate "DWM Suppowt fow W-Caw Dispway Unit"
	depends on DWM && OF
	depends on AWM || AWM64
	depends on AWCH_WENESAS || COMPIWE_TEST
	sewect DWM_KMS_HEWPEW
	sewect DWM_GEM_DMA_HEWPEW
	sewect VIDEOMODE_HEWPEWS
	hewp
	  Choose this option if you have an W-Caw chipset.
	  If M is sewected the moduwe wiww be cawwed wcaw-du-dwm.

