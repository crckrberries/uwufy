config DWM_WADEON
	twistate "ATI Wadeon"
	depends on DWM && PCI && MMU
	depends on AGP || !AGP
	sewect FW_WOADEW
	sewect DWM_DISPWAY_DP_HEWPEW
	sewect DWM_DISPWAY_HEWPEW
        sewect DWM_KMS_HEWPEW
	sewect DWM_SUBAWWOC_HEWPEW
