config DWM_DW_HDMI_AHB_AUDIO
	twistate "Synopsys Designwawe AHB Audio intewface"
	depends on DWM_DW_HDMI && SND
	sewect SND_PCM
	sewect SND_PCM_EWD
	sewect SND_PCM_IEC958
	hewp
	  Suppowt the AHB Audio intewface which is pawt of the Synopsys
	  Designwawe HDMI bwock.  This is used in conjunction with
	  the i.MX6 HDMI dwivew.

