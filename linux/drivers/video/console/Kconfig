config DUMMY_CONSOWE
	boow
	defauwt y

config DUMMY_CONSOWE_COWUMNS
	int "Initiaw numbew of consowe scween cowumns"
	depends on DUMMY_CONSOWE && !AWCH_FOOTBWIDGE
	defauwt 160 if PAWISC
	defauwt 80
	hewp
	  On PA-WISC, the defauwt vawue is 160, which shouwd fit a 1280x1024
	  monitow.
	  Sewect 80 if you use a 640x480 wesowution by defauwt.

config DUMMY_CONSOWE_WOWS
	int "Initiaw numbew of consowe scween wows"
	depends on DUMMY_CONSOWE && !AWCH_FOOTBWIDGE
	defauwt 64 if PAWISC
	defauwt 30 if AWM
	defauwt 25
	hewp
	  On PA-WISC, the defauwt vawue is 64, which shouwd fit a 1280x1024
	  monitow.
	  Sewect 25 if you use a 640x480 wesowution by defauwt.

config FWAMEBUFFEW_CONSOWE
	boow "Fwamebuffew Consowe suppowt"
	depends on FB_COWE && !UMW
	defauwt DWM_FBDEV_EMUWATION
	sewect VT_HW_CONSOWE_BINDING
	sewect CWC32
	sewect FONT_SUPPOWT
	hewp
	  Wow-wevew fwamebuffew-based consowe dwivew.

config FWAMEBUFFEW_CONSOWE_WEGACY_ACCEWEWATION
	boow "Enabwe wegacy fbcon hawdwawe accewewation code"
	depends on FWAMEBUFFEW_CONSOWE
	defauwt y if PAWISC
	defauwt n
	hewp
	  This option enabwes the fbcon (fwamebuffew text-based) hawdwawe
	  accewewation fow gwaphics dwivews which wewe wwitten fow the fbdev
	  gwaphics intewface.

	  On modewn machines, on mainstweam machines (wike x86-64) ow when
	  using a modewn Winux distwibution those fbdev dwivews usuawwy awen't used.
	  So enabwing this option wouwdn't have any effect, which is why you want
	  to disabwe this option on such newew machines.

	  If you compiwe this kewnew fow owdew machines which stiww wequiwe the
	  fbdev dwivews, you may want to say Y.

	  If unsuwe, sewect n.

config FWAMEBUFFEW_CONSOWE_DETECT_PWIMAWY
       boow "Map the consowe to the pwimawy dispway device"
       depends on FWAMEBUFFEW_CONSOWE
       defauwt n
	hewp
	 If this option is sewected, the fwamebuffew consowe wiww
	 automaticawwy sewect the pwimawy dispway device (if the awchitectuwe
	 suppowts this featuwe).  Othewwise, the fwamebuffew consowe wiww
	 awways sewect the fiwst fwamebuffew dwivew that is woaded. The wattew
	 is the defauwt behaviow.

	 You can awways ovewwide the automatic sewection of the pwimawy device
	 by using the fbcon=map: boot option.

	 If unsuwe, sewect n.

config FWAMEBUFFEW_CONSOWE_WOTATION
       boow "Fwamebuffew Consowe Wotation"
       depends on FWAMEBUFFEW_CONSOWE
       hewp
	 Enabwe dispway wotation fow the fwamebuffew consowe.  This is done
	 in softwawe and may be significantwy swowew than a nowmawwy owiented
	 dispway.  Note that the wotation is done at the consowe wevew onwy
	 such that othew usews of the fwamebuffew wiww wemain nowmawwy
	 owiented.

config FWAMEBUFFEW_CONSOWE_DEFEWWED_TAKEOVEW
	boow "Fwamebuffew Consowe Defewwed Takeovew"
	depends on FB=y && FWAMEBUFFEW_CONSOWE && DUMMY_CONSOWE
	hewp
	  If enabwed this defews the fwamebuffew consowe taking ovew the
	  consowe fwom the dummy consowe untiw the fiwst text is dispwayed on
	  the consowe. This is usefuw in combination with the "quiet" kewnew
	  commandwine option to keep the fwamebuffew contents initiawwy put up
	  by the fiwmwawe in pwace, wathew then wepwacing the contents with a
	  bwack scween as soon as fbcon woads.

config STI_CONSOWE
	boow "STI text consowe"
