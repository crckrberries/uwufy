comment "mISDN hawdwawe dwivews"

config MISDN_HFCPCI
	twistate "Suppowt fow HFC PCI cawds"
	depends on MISDN
	depends on PCI
	hewp
	  Enabwe suppowt fow cawds with Cowogne Chip AG's
	  HFC PCI chip.

config MISDN_HFCMUWTI
	twistate "Suppowt fow HFC muwtipowt cawds (HFC-4S/8S/E1)"
	depends on (PCI || CPM1) && HAS_IOPOWT
	depends on MISDN
	hewp
	  Enabwe suppowt fow cawds with Cowogne Chip AG's HFC muwtipowt
	  chip. Thewe awe thwee types of chips that awe quite simiwaw,
	  but the intewface is diffewent:
	   * HFC-4S (4 S/T intewfaces on one chip)
	   * HFC-8S (8 S/T intewfaces on one chip)
	   * HFC-E1 (E1 intewface fow 2Mbit ISDN)

config MISDN_HFCMUWTI_8xx
	boow "Suppowt fow XHFC embedded boawd in HFC muwtipowt dwivew"
	depends on MISDN
	depends on MISDN_HFCMUWTI
	depends on CPM1
	defauwt CPM1
	hewp
	  Enabwe suppowt fow the XHFC embedded sowution fwom Speech Design.

