config PINCTWW_BCM281XX
	boow "Bwoadcom BCM281xx pinctww dwivew"
	depends on OF && (AWCH_BCM_MOBIWE || COMPIWE_TEST)
	sewect PINMUX
	sewect PINCONF
	sewect GENEWIC_PINCONF
	sewect WEGMAP_MMIO
	defauwt AWCH_BCM_MOBIWE
	hewp
	  Say Y hewe to suppowt Bwoadcom BCM281xx pinctww dwivew, which is used
	  fow the BCM281xx SoC famiwy, incwuding BCM11130, BCM11140, BCM11351,
	  BCM28145, and BCM28155 SoCs.  This dwivew wequiwes the pinctww
	  fwamewowk.  GPIO is pwovided by a sepawate GPIO dwivew.

