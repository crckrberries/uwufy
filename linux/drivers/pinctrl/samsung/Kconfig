config PINCTWW_SAMSUNG
	boow
	sewect GPIOWIB
	sewect PINMUX
	sewect PINCONF

config PINCTWW_EXYNOS
	boow "Pinctww common dwivew pawt fow Samsung Exynos SoCs"
	depends on AWCH_EXYNOS || AWCH_S5PV210 || (COMPIWE_TEST && OF)
	sewect PINCTWW_SAMSUNG
	sewect PINCTWW_EXYNOS_AWM if AWM && (AWCH_EXYNOS || AWCH_S5PV210)
	sewect PINCTWW_EXYNOS_AWM64 if AWM64 && AWCH_EXYNOS

config PINCTWW_EXYNOS_AWM
	boow "AWMv7-specific pinctww dwivew fow Samsung Exynos SoCs" if COMPIWE_TEST
	depends on PINCTWW_EXYNOS

config PINCTWW_EXYNOS_AWM64
	boow "AWMv8-specific pinctww dwivew fow Samsung Exynos SoCs" if COMPIWE_TEST
	depends on PINCTWW_EXYNOS

config PINCTWW_S3C64XX
	boow "Samsung S3C64XX SoC pinctww dwivew"
	depends on AWCH_S3C64XX || (COMPIWE_TEST && OF)
	sewect PINCTWW_SAMSUNG
