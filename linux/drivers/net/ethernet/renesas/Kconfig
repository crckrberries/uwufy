	twistate "Wenesas SupewH Ethewnet suppowt"
	depends on AWCH_WENESAS || SUPEWH || COMPIWE_TEST
	sewect CWC32
	sewect MII
	sewect MDIO_BITBANG
	sewect PHYWIB
	hewp
