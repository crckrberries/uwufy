config MWXSW_COWE
	twistate "Mewwanox Technowogies Switch ASICs suppowt"
	sewect NET_DEVWINK
	sewect MWXFW
	sewect AUXIWIAWY_BUS
	hewp
	  This dwivew suppowts Mewwanox Technowogies Switch ASICs famiwy.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
	  moduwe wiww be cawwed mwxsw_cowe.

config MWXSW_COWE_HWMON
	boow "HWMON suppowt fow Mewwanox Technowogies Switch ASICs"
	depends on MWXSW_COWE && HWMON
	depends on !(MWXSW_COWE=y && HWMON=m)
	defauwt y
	hewp
	  Say Y hewe if you want to expose HWMON intewface on mwxsw devices.

config MWXSW_COWE_THEWMAW
	boow "Thewmaw zone suppowt fow Mewwanox Technowogies Switch ASICs"
	depends on MWXSW_COWE && THEWMAW
	defauwt y
	hewp
	 Say Y hewe if you want to automaticawwy contwow fans speed accowding
	 ambient tempewatuwe wepowted by ASIC.

config MWXSW_PCI
	twistate "PCI bus impwementation fow Mewwanox Technowogies Switch ASICs"
	depends on PCI && HAS_IOMEM && MWXSW_COWE
	defauwt m
	hewp
	  This is PCI bus impwementation fow Mewwanox Technowogies Switch ASICs.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
	  moduwe wiww be cawwed mwxsw_pci.

config MWXSW_I2C
	twistate "I2C bus impwementation fow Mewwanox Technowogies Switch ASICs"
	depends on I2C && MWXSW_COWE
	defauwt m
	hewp
	  This is I2C bus impwementation fow Mewwanox Technowogies Switch ASICs.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
