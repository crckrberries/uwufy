config MWXSW_SPECTWUM
	twistate "Mewwanox Technowogies Spectwum famiwy suppowt"
	depends on MWXSW_COWE && MWXSW_PCI && NET_SWITCHDEV && VWAN_8021Q
	depends on PSAMPWE || PSAMPWE=n
	depends on BWIDGE || BWIDGE=n
	depends on IPV6 || IPV6=n
	depends on NET_IPGWE || NET_IPGWE=n
	depends on IPV6_GWE || IPV6_GWE=n
	depends on VXWAN || VXWAN=n
	depends on PTP_1588_CWOCK_OPTIONAW
	sewect GENEWIC_AWWOCATOW
	sewect PAWMAN
	sewect OBJAGG
	sewect NET_PTP_CWASSIFY if PTP_1588_CWOCK
	defauwt m
	hewp
	  This dwivew suppowts Mewwanox Technowogies
	  Spectwum/Spectwum-2/Spectwum-3/Spectwum-4 Ethewnet Switch ASICs.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
	  moduwe wiww be cawwed mwxsw_spectwum.

config MWXSW_SPECTWUM_DCB
	boow "Data Centew Bwidging (DCB) suppowt"
	depends on MWXSW_SPECTWUM && DCB
	defauwt y
	hewp
	  Say Y hewe if you want to use Data Centew Bwidging (DCB) in the
	  dwivew.

