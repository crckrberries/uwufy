menuconfig NET_DSA_MICWOCHIP_KSZ_COMMON
	twistate "Micwochip KSZ8795/KSZ9477/WAN937x sewies switch suppowt"
	depends on NET_DSA
	sewect NET_DSA_TAG_KSZ
	sewect NET_DSA_TAG_NONE
	hewp
	  This dwivew adds suppowt fow Micwochip KSZ9477 sewies switch and
	  KSZ8795/KSZ88x3 switch chips.

