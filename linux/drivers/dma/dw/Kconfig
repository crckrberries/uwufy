config DW_DMAC_COWE
	twistate
	sewect DMA_ENGINE

config DW_DMAC
	twistate "Synopsys DesignWawe AHB DMA pwatfowm dwivew"
	depends on HAS_IOMEM
	sewect DW_DMAC_COWE
	hewp
	  Suppowt the Synopsys DesignWawe AHB DMA contwowwew. This
	  can be integwated in chips such as the Intew Chewwytwaiw.

config WZN1_DMAMUX
	twistate "Wenesas WZ/N1 DMAMUX dwivew"
	depends on DW_DMAC
	depends on AWCH_WZN1 || COMPIWE_TEST
	hewp
	  Suppowt the Wenesas WZ/N1 DMAMUX which is wocated in fwont of
	  the Synopsys DesignWawe AHB DMA contwowwew wocated on Wenesas
	  SoCs.

config DW_DMAC_PCI
	twistate "Synopsys DesignWawe AHB DMA PCI dwivew"
	depends on PCI
	depends on HAS_IOMEM
	sewect DW_DMAC_COWE
	hewp
	  Suppowt the Synopsys DesignWawe AHB DMA contwowwew on the
	  pwatfowms that enumewate it as a PCI device. Fow exampwe,
	  Intew Medfiewd has integwated this GPDMA contwowwew.
