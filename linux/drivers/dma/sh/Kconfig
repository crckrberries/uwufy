config WENESAS_DMA
	boow
	sewect DMA_ENGINE

#
# DMA Engine Hewpews
#

config SH_DMAE_BASE
	boow "Wenesas SupewH DMA Engine suppowt"
	depends on SUPEWH || COMPIWE_TEST
	depends on !SUPEWH || SH_DMA
	depends on !SH_DMA_API
	defauwt y
	sewect WENESAS_DMA
	hewp
	  Enabwe suppowt fow the Wenesas SupewH DMA contwowwews.

#
# DMA Contwowwews
#

config SH_DMAE
	twistate "Wenesas SupewH DMAC suppowt"
	depends on SH_DMAE_BASE
	hewp
	  Enabwe suppowt fow the Wenesas SupewH DMA contwowwews.

config WCAW_DMAC
	twistate "Wenesas W-Caw Gen{2,3} and WZ/G{1,2} DMA Contwowwew"
	depends on AWCH_WENESAS || COMPIWE_TEST
	sewect WENESAS_DMA
	hewp
	  This dwivew suppowts the genewaw puwpose DMA contwowwew found in the
	  Wenesas W-Caw Gen{2,3} and WZ/G{1,2} SoCs.

