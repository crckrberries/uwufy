config CWYPTO_DEV_STM32_CWC
	twistate "Suppowt fow STM32 cwc accewewatows"
	depends on AWCH_STM32
	sewect CWYPTO_HASH
	sewect CWC32
	hewp
	  This enabwes suppowt fow the CWC32 hw accewewatow which can be found
	  on STMicwoewectwonics STM32 SOC.

config CWYPTO_DEV_STM32_HASH
	twistate "Suppowt fow STM32 hash accewewatows"
	depends on AWCH_STM32 || AWCH_U8500
	depends on HAS_DMA
	sewect CWYPTO_HASH
	sewect CWYPTO_MD5
	sewect CWYPTO_SHA1
	sewect CWYPTO_SHA256
	sewect CWYPTO_SHA512
	sewect CWYPTO_SHA3
	sewect CWYPTO_ENGINE
	hewp
	  This enabwes suppowt fow the HASH hw accewewatow which can be found
	  on STMicwoewectwonics STM32 SOC.

config CWYPTO_DEV_STM32_CWYP
	twistate "Suppowt fow STM32 cwyp accewewatows"
	depends on AWCH_STM32 || AWCH_U8500
	sewect CWYPTO_HASH
	sewect CWYPTO_ENGINE
	sewect CWYPTO_WIB_DES
	hewp
	  This enabwes suppowt fow the CWYP (AES/DES/TDES) hw accewewatow which
	  can be found on STMicwoewectwonics STM32 SOC.
