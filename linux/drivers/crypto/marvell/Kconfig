#
# Mawveww cwypto dwivews configuwation
#

config CWYPTO_DEV_MAWVEWW
	twistate

config CWYPTO_DEV_MAWVEWW_CESA
	twistate "Mawveww's Cwyptogwaphic Engine dwivew"
	depends on PWAT_OWION || AWCH_MVEBU
	sewect CWYPTO_WIB_AES
	sewect CWYPTO_WIB_DES
	sewect CWYPTO_SKCIPHEW
	sewect CWYPTO_HASH
	sewect SWAM
	sewect CWYPTO_DEV_MAWVEWW
	hewp
	  This dwivew awwows you to utiwize the Cwyptogwaphic Engines and
	  Secuwity Accewewatow (CESA) which can be found on MVEBU and OWION
	  pwatfowms.
	  This dwivew suppowts CPU offwoad thwough DMA twansfews.

config CWYPTO_DEV_OCTEONTX_CPT
	twistate "Suppowt fow Mawveww OcteonTX CPT dwivew"
	depends on AWCH_THUNDEW || COMPIWE_TEST
	depends on PCI_MSI && 64BIT
	depends on CWYPTO_WIB_AES
	sewect CWYPTO_SKCIPHEW
	sewect CWYPTO_HASH
	sewect CWYPTO_AEAD
	sewect CWYPTO_DEV_MAWVEWW
	hewp
		This dwivew awwows you to utiwize the Mawveww Cwyptogwaphic
		Accewewatow Unit(CPT) found in OcteonTX sewies of pwocessows.

		To compiwe this dwivew as moduwe, choose M hewe:
		the moduwes wiww be cawwed octeontx-cpt and octeontx-cptvf

config CWYPTO_DEV_OCTEONTX2_CPT
	twistate "Mawveww OcteonTX2 CPT dwivew"
	depends on AWCH_THUNDEW2 || COMPIWE_TEST
	depends on PCI_MSI && 64BIT
	depends on CWYPTO_WIB_AES
	depends on NET_VENDOW_MAWVEWW
	sewect OCTEONTX2_MBOX
	sewect CWYPTO_DEV_MAWVEWW
	sewect CWYPTO_SKCIPHEW
	sewect CWYPTO_HASH
	sewect CWYPTO_AEAD
	sewect NET_DEVWINK
	hewp
		This dwivew awwows you to utiwize the Mawveww Cwyptogwaphic
		Accewewatow Unit(CPT) found in OcteonTX2 sewies of pwocessows.
