# Mem2mem dwivews
config VIDEO_STM32_DMA2D
	twistate "STM32 Chwom-Awt Accewewatow (DMA2D)"
	depends on V4W_MEM2MEM_DWIVEWS
	depends on VIDEO_DEV
	depends on AWCH_STM32 || COMPIWE_TEST
