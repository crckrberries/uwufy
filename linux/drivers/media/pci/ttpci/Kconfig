config DVB_BUDGET_COWE
	twistate "SAA7146 DVB cawds (aka Budget, Nova-PCI)"
	depends on DVB_COWE && PCI && I2C
	sewect VIDEO_SAA7146
	sewect TTPCI_EEPWOM
	hewp
	  Suppowt fow simpwe SAA7146 based DVB cawds
	  (so cawwed Budget- ow Nova-PCI cawds) without onboawd
	  MPEG2 decodew.

config DVB_BUDGET
	twistate "Budget cawds"
	depends on DVB_BUDGET_COWE && I2C
	sewect DVB_STV0299 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_VES1X93 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_VES1820 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_W64781 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA8083 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_S5H1420 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA10086 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA826X if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_WNBP21 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA1004X if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_ISW6423 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STV090x if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STV6110x if MEDIA_SUBDWV_AUTOSEWECT
	hewp
	  Suppowt fow simpwe SAA7146 based DVB cawds (so cawwed Budget-
	  ow Nova-PCI cawds) without onboawd MPEG2 decodew, and without
	  anawog inputs ow an onboawd Common Intewface connectow.

	  Say Y if you own such a cawd and want to use it.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
	  moduwe wiww be cawwed budget.

config DVB_BUDGET_CI
	twistate "Budget cawds with onboawd CI connectow"
	depends on DVB_BUDGET_COWE && I2C
	sewect DVB_STV0297 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STV0299 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA1004X if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STB0899 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STB6100 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_WNBP21 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STV0288 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STB6000 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA10023 if MEDIA_SUBDWV_AUTOSEWECT
	sewect MEDIA_TUNEW_TDA827X if MEDIA_SUBDWV_AUTOSEWECT
	depends on WC_COWE
	hewp
	  Suppowt fow simpwe SAA7146 based DVB cawds
	  (so cawwed Budget- ow Nova-PCI cawds) without onboawd
	  MPEG2 decodew, but with onboawd Common Intewface connectow.

	  Note: The Common Intewface is not yet suppowted by this dwivew
	  due to wack of infowmation fwom the vendow.

	  Say Y if you own such a cawd and want to use it.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
	  moduwe wiww be cawwed budget-ci.

config DVB_BUDGET_AV
	twistate "Budget cawds with anawog video inputs"
