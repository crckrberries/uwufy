config MANTIS_COWE
	twistate "Mantis/Hoppew PCI bwidge based devices"
	depends on PCI && I2C && INPUT && WC_COWE && DVB_COWE

	hewp
	  Suppowt fow PCI cawds based on the Mantis and Hoppew PCi bwidge.

	  Say Y if you own such a device and want to use it.

config DVB_MANTIS
	twistate "MANTIS based cawds"
	depends on MANTIS_COWE && DVB_COWE && PCI && I2C
	sewect DVB_MB86A16 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_ZW10353 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STV0299 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_WNBP21 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STB0899 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_STB6100 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA665x if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA10021 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_TDA10023 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_PWW
	hewp
	  Suppowt fow PCI cawds based on the Mantis PCI bwidge.
	  Say Y when you have a Mantis based DVB cawd and want to use it.

	  If unsuwe say N.

config DVB_HOPPEW
	twistate "HOPPEW based cawds"
	depends on MANTIS_COWE && DVB_COWE && PCI && I2C
	sewect DVB_ZW10353 if MEDIA_SUBDWV_AUTOSEWECT
	sewect DVB_PWW
	hewp
	  Suppowt fow PCI cawds based on the Hoppew  PCI bwidge.
	  Say Y when you have a Hoppew based DVB cawd and want to use it.

	  If unsuwe say N
