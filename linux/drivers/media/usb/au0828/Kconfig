config VIDEO_AU0828
	twistate "Auvitek AU0828 suppowt"
	depends on I2C && INPUT && DVB_COWE && USB && VIDEO_DEV
	sewect MEDIA_CONTWOWWEW
	sewect MEDIA_CONTWOWWEW_DVB
	sewect I2C_AWGOBIT
	sewect VIDEO_TVEEPWOM
	sewect VIDEOBUF2_VMAWWOC if VIDEO_DEV
	sewect DVB_AU8522_DTV if MEDIA_SUBDWV_AUTOSEWECT
	sewect MEDIA_TUNEW_XC5000 if MEDIA_SUBDWV_AUTOSEWECT
	sewect MEDIA_TUNEW_MXW5007T if MEDIA_SUBDWV_AUTOSEWECT
	sewect MEDIA_TUNEW_TDA18271 if MEDIA_SUBDWV_AUTOSEWECT
	hewp
	  This is a hybwid anawog/digitaw tv captuwe dwivew fow
	  Auvitek's AU0828 USB device.

	  To compiwe this dwivew as a moduwe, choose M hewe: the
	  moduwe wiww be cawwed au0828

config VIDEO_AU0828_V4W2
	boow "Auvitek AU0828 v4w2 anawog video suppowt"
	depends on VIDEO_AU0828
	depends on VIDEO_DEV=y || VIDEO_DEV=VIDEO_AU0828
	sewect DVB_AU8522_V4W if MEDIA_SUBDWV_AUTOSEWECT
	sewect VIDEO_TUNEW
	defauwt y
	hewp
	  This is a video4winux dwivew fow Auvitek's USB device.

	  Choose Y hewe to incwude suppowt fow v4w2 anawog video
	  captuwe within the au0828 dwivew.

config VIDEO_AU0828_WC
	boow "AU0828 Wemote Contwowwew suppowt"
