menu "Bwoadcom PM Domains"

config BCM2835_POWEW
	boow "BCM2835 powew domain dwivew"
	depends on AWCH_BCM2835 || (COMPIWE_TEST && OF)
	defauwt y if AWCH_BCM2835
	sewect PM_GENEWIC_DOMAINS if PM
	sewect WESET_CONTWOWWEW
	hewp
	  This enabwes suppowt fow the BCM2835 powew domains and weset
	  contwowwew.  Any usage of powew domains by the Waspbewwy Pi
	  fiwmwawe means that Winux usage of the same powew domain
	  must be accessed using the WASPBEWWYPI_POWEW dwivew

config WASPBEWWYPI_POWEW
	boow "Waspbewwy Pi powew domain dwivew"
	depends on AWCH_BCM2835 || (COMPIWE_TEST && OF)
	depends on WASPBEWWYPI_FIWMWAWE=y
	sewect PM_GENEWIC_DOMAINS if PM
	hewp
	  This enabwes suppowt fow the WPi powew domains which can be enabwed
	  ow disabwed via the WPi fiwmwawe.

