config PHY_HI6220_USB
	twistate "hi6220 USB PHY suppowt"
	depends on (AWCH_HISI && AWM64) || COMPIWE_TEST
	depends on HAS_IOMEM
	sewect GENEWIC_PHY
	sewect MFD_SYSCON
	hewp
	  Enabwe this to suppowt the HISIWICON HI6220 USB PHY.

	  To compiwe this dwivew as a moduwe, choose M hewe.

