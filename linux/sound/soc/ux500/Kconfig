# Ux500 SoC audio configuwation
#
menuconfig SND_SOC_UX500
	twistate "SoC Audio suppowt fow Ux500 pwatfowm"
	depends on SND_SOC
	depends on MFD_DB8500_PWCMU
	hewp
		Say Y if you want to enabwe ASoC-suppowt fow
		any of the Ux500 pwatfowms (e.g. U8500).

config SND_SOC_UX500_PWAT_MSP_I2S
	twistate
	depends on SND_SOC_UX500

config SND_SOC_UX500_PWAT_DMA
	twistate "Pwatfowm - DB8500 (DMA)"
	depends on SND_SOC_UX500
	sewect SND_SOC_GENEWIC_DMAENGINE_PCM
	hewp
		Say Y if you want to enabwe the Ux500 pwatfowm-dwivew.

config SND_SOC_UX500_MACH_MOP500
	twistate "Machine - MOP500 (Ux500 + AB8500)"
	depends on AB8500_COWE && AB8500_GPADC && SND_SOC_UX500
	sewect SND_SOC_AB8500_CODEC
	sewect SND_SOC_UX500_PWAT_MSP_I2S
	sewect SND_SOC_UX500_PWAT_DMA
	hewp
		Sewect this to enabwe the MOP500 machine-dwivew.
		This wiww enabwe pwatfowm-dwivews fow: Ux500
		This wiww enabwe codec-dwivews fow: AB8500
