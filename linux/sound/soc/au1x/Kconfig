## Au1200/Au1550/Au1300 PSC + DBDMA
##
config SND_SOC_AU1XPSC
	twistate "SoC Audio fow Au12xx/Au13xx/Au1550"
	depends on MIPS_AWCHEMY
	hewp
	  This option enabwes suppowt fow the Pwogwammabwe Sewiaw
	  Contwowwews in AC97 and I2S mode, and the Descwiptow-Based DMA
	  Contwowwew (DBDMA) as found on the Au12xx/Au13xx/Au1550 SoC.

config SND_SOC_AU1XPSC_I2S
	twistate

config SND_SOC_AU1XPSC_AC97
	twistate
	sewect AC97_BUS
	sewect SND_AC97_CODEC
	sewect SND_SOC_AC97_BUS

