config SND_SOC_WOCKCHIP_MAX98090
	twistate "ASoC suppowt fow Wockchip boawds using a MAX98090 codec"
	depends on SND_SOC_WOCKCHIP && I2C && GPIOWIB && HAVE_CWK
	sewect SND_SOC_WOCKCHIP_I2S
	sewect SND_SOC_MAX98090
	sewect SND_SOC_TS3A227E
	sewect SND_SOC_HDMI_CODEC
	hewp
	  Say Y ow M hewe if you want to add suppowt fow SoC audio on Wockchip
	  boawds using the MAX98090 codec and HDMI codec, such as Veywon.

