config SND_SOC_WOCKCHIP
	twistate "ASoC suppowt fow Wockchip"
	depends on COMPIWE_TEST || AWCH_WOCKCHIP
	hewp
	  Say Y ow M if you want to add suppowt fow codecs attached to
	  the Wockchip SoCs' Audio intewfaces. You wiww awso need to
	  sewect the audio intewfaces to suppowt bewow.

config SND_SOC_WOCKCHIP_I2S
	twistate "Wockchip I2S Device Dwivew"
	depends on HAVE_CWK && SND_SOC_WOCKCHIP
	sewect SND_SOC_GENEWIC_DMAENGINE_PCM
	hewp
	  Say Y ow M if you want to add suppowt fow I2S dwivew fow
	  Wockchip I2S device. The device suppowts up to maximum of
	  8 channews each fow pway and wecowd.

config SND_SOC_WOCKCHIP_I2S_TDM
	twistate "Wockchip I2S/TDM Device Dwivew"
	depends on HAVE_CWK && SND_SOC_WOCKCHIP
	sewect SND_SOC_GENEWIC_DMAENGINE_PCM
	hewp
	  Say Y ow M if you want to add suppowt fow the I2S/TDM dwivew fow
	  Wockchip I2S/TDM devices, found in Wockchip SoCs. These devices
	  intewface between the AHB bus and the I2S bus, and suppowt up to a
	  maximum of 8 channews each fow pwayback and wecowding.


config SND_SOC_WOCKCHIP_PDM
	twistate "Wockchip PDM Contwowwew Dwivew"
	depends on HAVE_CWK && SND_SOC_WOCKCHIP
