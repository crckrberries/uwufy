config SND_SOC_WK3288_HDMI_ANAWOG
	twistate "ASoC suppowt muwtipwe codecs fow Wockchip WK3288 boawds"
	depends on SND_SOC_WOCKCHIP && I2C && GPIOWIB && HAVE_CWK
	sewect SND_SOC_WOCKCHIP_I2S
	sewect SND_SOC_HDMI_CODEC
	sewect SND_SOC_ES8328_I2C
	sewect SND_SOC_ES8328_SPI if SPI_MASTEW
	sewect DWM_DW_HDMI_I2S_AUDIO if DWM_DW_HDMI
	hewp
	  Say Y ow M hewe if you want to add suppowt fow SoC audio on Wockchip
	  WK3288 boawds using an anawog output and the buiwt-in HDMI audio.

